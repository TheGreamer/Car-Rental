@using CarRental.Entity.Concrete
@model IotCar

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-section">
    <div class="container-liquid">
        <div class="row">
            <div class="col-xs-12">
                <div class="sec-box">
                    <a class="closethis"></a>
                    <header>
                        <h2 class="heading">IOT Araç Düzenleme Formu</h2>
                    </header>
                    <div class="contents">
                        <a class="togglethis"></a>
                        <div class="table-box">
                            <form name="editIotCarForm" action="/Admin/IotCars/Edit" method="post" onsubmit="return ValidateEditIotCarForm()">
                                <input type="hidden" name="Id" id="Id" value="@Model.Id" />
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th class="col-md-4">Açıklama</th>
                                            <th class="col-md-8">Değer</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td class="col-md-4">Ad - Marka</td>
                                            <td class="col-md-8">
                                                <div class="form-group has-success">
                                                    @Html.EditorFor(model => model.Brand, new { htmlAttributes = new { @class = "form-control" } })
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="col-md-4">Model</td>
                                            <td class="col-md-8">
                                                <div class="form-group has-success">
                                                    @Html.EditorFor(model => model.Model, new { htmlAttributes = new { @class = "form-control" } })
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="col-md-4">Plakası</td>
                                            <td class="col-md-8">
                                                <div class="form-group has-success">
                                                    @Html.EditorFor(model => model.PlateNumber, new { htmlAttributes = new { @class = "form-control" } })
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="col-md-4">Araç Tipi</td>
                                            <td class="col-md-8">
                                                <div class="form-group has-success">
                                                    @Html.EditorFor(model => model.VehicleType, new { htmlAttributes = new { @class = "form-control" } })
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="col-md-4">İşlemler</td>
                                            <td class="col-md-8">
                                                <div>
                                                    @Html.EditorFor(model => model.CreatedDate, new { htmlAttributes = new { type = "hidden" } })
                                                    @Html.EditorFor(model => model.CreatedUserName, new { htmlAttributes = new { type = "hidden" } })
                                                    @Html.EditorFor(model => model.CreatedComputerName, new { htmlAttributes = new { type = "hidden" } })
                                                    @Html.EditorFor(model => model.Status, new { htmlAttributes = new { type = "hidden" } })
                                                    <input type="submit" value="Güncelle" class="btn btn-success style2" style="margin-right: 10px; width: 200px;" />
                                                    @Html.ActionLink("Geri Dön", "Index", null, new { @class = "btn btn-info style2", style = "width: 200px" })
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </form>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function ValidateEditIotCarForm()
    {
        var brand = document.editIotCarForm[1].value;
        var model = document.editIotCarForm[2].value;
        var plateNumber = document.editIotCarForm[3].value;
        var vehicleType = document.editIotCarForm[4].value;

        if (brand == null || brand == "" || model == null || model == "" || plateNumber == null || plateNumber == "" || vehicleType == null || vehicleType == "")
        {
            alertify.error("Bilgiler boş bırakılamaz.");
            return false;
        }
    }
</script>