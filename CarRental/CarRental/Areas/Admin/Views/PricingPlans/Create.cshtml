@using CarRental.Entity.Concrete
@model PricingPlan

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-section">
    <div class="container-liquid">
        <div class="row">
            <div class="col-xs-12">
                <div class="sec-box">
                    <a class="closethis"></a>
                    <header>
                        <h2 class="heading">Ödeme Yöntemi Ekleme Formu</h2>
                    </header>
                    <div class="contents">
                        <a class="togglethis"></a>
                        <div class="table-box">
                            <form name="addPricingPlanForm" action="/Admin/PricingPlans/Create" method="post" onsubmit="return ValidateAddPricingPlanForm()">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th class="col-md-4">Açıklama</th>
                                            <th class="col-md-8">Değer</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td class="col-md-4">Başlık</td>
                                            <td class="col-md-8">
                                                <div class="form-group has-success">
                                                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="col-md-4">Fiyat</td>
                                            <td class="col-md-8">
                                                <div class="form-group has-success">
                                                    @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="col-md-4">Tüm Listelemeleri Yapma Durumu</td>
                                            <td class="col-md-8">
                                                <div class="form-group has-success">
                                                    <select class="form-control" name="SearchAllListings" id="SearchAllListings">
                                                        <option value="true">Mevcut</option>
                                                        <option value="false">Mevcut değil</option>
                                                    </select>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="col-md-4">İstek Listesine Ekleme Durumu</td>
                                            <td class="col-md-8">
                                                <div class="form-group has-success">
                                                    <select class="form-control" name="CreateWishlist" id="CreateWishlist">
                                                        <option value="true">Mevcut</option>
                                                        <option value="false">Mevcut değil</option>
                                                    </select>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="col-md-4">Satıcı Bilgisini Görme Durumu</td>
                                            <td class="col-md-8">
                                                <div class="form-group has-success">
                                                    <select class="form-control" name="SeeSellerContact" id="SeeSellerContact">
                                                        <option value="true">Mevcut</option>
                                                        <option value="false">Mevcut değil</option>
                                                    </select>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="col-md-4">Tam Listeleme Bilgisi Durumu</td>
                                            <td class="col-md-8">
                                                <div class="form-group has-success">
                                                    <select class="form-control" name="FullListingInfo" id="FullListingInfo">
                                                        <option value="true">Mevcut</option>
                                                        <option value="false">Mevcut değil</option>
                                                    </select>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="col-md-4">İşlemler</td>
                                            <td class="col-md-8">
                                                <div>
                                                    <input type="submit" value="Ekle" class="btn btn-success style2" style="margin-right: 10px; width: 200px;" />
                                                    @Html.ActionLink("Geri Dön", "Index", null, new { @class = "btn btn-info style2", style = "width: 200px" })
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </form>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function ValidateAddPricingPlanForm()
    {
        var title = document.addPricingPlanForm[0].value;
        var price = document.addPricingPlanForm[1].value;
        var searchAllListings = document.getElementById('SearchAllListings').value;
        var createWishlist = document.getElementById('CreateWishlist').value;
        var seeSellerContact = document.getElementById('SeeSellerContact').value;
        var fullListingInfo = document.getElementById('FullListingInfo').value;

        if (title == null || title == "" || price == null || price == "" || searchAllListings == null || searchAllListings == "" || createWishlist == null || createWishlist == "" || seeSellerContact == null || seeSellerContact == "" || fullListingInfo == null || fullListingInfo == "")
        {
            alertify.error("Bilgiler boş bırakılamaz.");
            return false;
        }
    }
</script>